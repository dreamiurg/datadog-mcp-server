{
  "name": "datadog-mcp-server",
  "version": "1.2.1",
  "description": "MCP Server for Datadog API",
  "main": "dist/index.js",
  "type": "commonjs",
  "bin": {
    "datadog-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint",
    "audit": "npm audit --audit-level=high",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "complexity": "lizard -l typescript -C 15 -L 60 -a 5 -w -x 'src/**/*.test.ts' src/",
    "ci": "npm run check && npm run test:coverage && npm run complexity && npm run build",
    "prepublishOnly": "npm run audit && npm run check && npm run build",
    "publish:dry-run": "npm pack --dry-run",
    "prepare": "node scripts/prepare.js"
  },
  "keywords": [
    "datadog",
    "mcp",
    "model-context-protocol",
    "observability",
    "api"
  ],
  "author": "dreamiurg",
  "license": "MIT",
  "dependencies": {
    "@datadog/datadog-api-client": "^1.49.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "dotenv": "^17.2.3",
    "minimist": "^1.2.8",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.0.3",
    "@types/pino": "^7.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dreamiurg/datadog-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/dreamiurg/datadog-mcp-server/issues"
  },
  "homepage": "https://github.com/dreamiurg/datadog-mcp-server#readme"
}
